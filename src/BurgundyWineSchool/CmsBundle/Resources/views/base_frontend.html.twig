<body>
    <section id="container">
        {# TOP MENU #}
        <section id="menu">
            <nav class="navbar-default navbar-side" id="sidebar" role="navigation">
                <div class="sidebar-collapse">
                    <ul class="nav menu" id="main-menu">
                        <li><a>SIGN-UP</a></li>
                        <li><a>SIGN-UP</a></li>
                        <li><a>MY ACCOUNT</a></li>
                        <li><a>PICKUP</a></li>
                    </ul>
                </div>
            </nav>
            <nav class="editable-menu navbar-default navbar-side" id="sidebar" role="navigation">
                <div class="sidebar-collapse">
                    <ul class="nav menu" id="main-menu">
                        {% for menuItem in menuItems %}
                            <li><a href="{{ path('index', { 'route': menuItem.route })  }}">{{ menuItem.name }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </nav>
            <a id="logo" href="{{ path('default') }}"><img src="{{ asset('img/frontend_logo.png') }}"/></a>
        </section>
        <div id="sub-container">
        <div id="wrapper">
            <div id="bloc">
                <div id="content">
                    <div id="content-bottom-marginer">
                    {% block body %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
        <div id="social-links"><i class="fa fa-tumblr"></i><i class="fa fa-instagram"></i><i class="fa fa-facebook-official"></i></div>
        </div>
    </section>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
